<?xml version="1.0" encoding="UTF-8" ?>
<Module>
        <ModulePrefs title="Hangout Starter">
                <Require feature="rpc" />
                <Require feature="views" />
                <Require feature="locked-domain" />
        </ModulePrefs>
        <Content type="html"><![CDATA[

<html>
<body>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>

<h3>DBC Connect</h3>
<h4 id='getting-pair'>Passing Hangout URL to your pair...</h4>

<script>
function sendUrlToServer () {
  var hangoutUrl = gapi.hangout.getHangoutUrl(),
    appData = gadgets.views.getParams()['appData'];
    dbcConnectConfig = JSON.parse(decodeURIComponent(appData));

  dbcConnectConfig.hangout_url = hangoutUrl;

  $.ajax({
    type: "PUT",
    crossDomain: true,
    url: "http://limitless-dawn-7150.herokuapp.com/pairings/update_hangout_info",
    data: dbcConnectConfig,
    dataType: "json",
    success: function(server_data){
    },
    error: function(server_data){
    }
  })

}

function init() {
  // When API is ready...
  gapi.hangout.onApiReady.add(
      function(eventObj) {
        if (eventObj.isApiReady) {
          sendUrlToServer();
        }
      });
}

// Wait for gadget to load.
gadgets.util.registerOnLoadHandler(init);

</script>
</body>
]]>
</Content>
</Module>
