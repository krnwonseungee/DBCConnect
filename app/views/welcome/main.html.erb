<%= javascript_include_tag "application"%>

<div class="header">
  <div class="home-menu pure-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
      <a class="pure-menu-heading" href=""><span>a</span></a>
      <ul id="top_navbar">
          <li id="availability"><a href="#"><span class="inactive"><i class="fa fa-user"></i><i class="fa fa-user"></i></span></a></li>
          <li class="pure-menu-selected"><a id="logged_user" href="#"></a></li>
          <li id="googlelink"></li>
          <li id="logout"><a href="#">Logout</a></li>
      </ul>
  </div>
</div>

<div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <i class="fa fa-chevron-left fa-2x"></i>
        <i class="fa fa-chevron-right fa-2x"></i>
        <span></span>
    </a>

    <div id="menu">
        <div class="pure-menu pure-menu-open">
          <a id="logo" class="logo pure-menu-heading" href="#"><i class="fa fa-comments-o fa-2x"></i></i>DBC Connect</a>

            <ul id="activeUsersList">
              <!-- <li class="menu-item-divided pure-menu-selected"> -->
            </ul>
        </div>
    </div>

    <div id="main">
        <div class="content">
        </div>

        <% if flash[:welcome] %>
          <div class="flash welcome-flash"><%= flash[:welcome] %></div>
        <% end %>

        <% if flash[:pairings] %>
          <div class="flash pairings-flash"><%= flash[:pairings] %></div>
        <% end %>


    </div>
</div>

<div id="map">
</div>

<div id="pop-up" style="display:none;">
  <a class="close-pop-up" href="#" rel="modal:close"><i class="fa fa-times-circle-o fa-lg"></i></a>
  <div class="button-div">
  </div>
  Kicks off a Google Hangout in a new tab
</div>

<script type="text/javascript">
$(function() {
   $('.flash').delay(500).fadeIn('normal', function() {
      $(this).delay(2500).fadeOut();
   });
});
</script>