<%= javascript_include_tag "application"%>

<script id="quote-template" type="text/x-handlebars-template">
  <div>
    <h3>"{{content}}"</h3>
    <h4>{{author}}</h4>
  </div>
</script>

<script id="pairlist-user-template" type="text/x-handlebars-template">
  <li id="{{id}}">
    <a href="#pop-up" rel="modal:open">
      {{#if active}}
        <i class="fa fa-circle active">
          {{else}}
        <i class="fa fa-circle">
      {{/if}}
      </i>
      {{name}}
    </a>
  </li>
</script>

<div class="header">
  <div class="home-menu pure-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
      <a class="pure-menu-heading" href=""><span></span></a>
      <ul id="top_navbar">
          <li id="availability"><a href="#"><span class="inactive"><i class="fa fa-user"></i><i class="fa fa-user"></i></span></a></li>
          <li><%= render 'searchbar' %></li>
          <li class="pure-menu-selected"><a class='profile-link logged_user' href="#"></a></li>
          <li id="logout"><a href="#">Logout</a></li>
      </ul>
  </div>
</div>

<div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <i class="fa fa-chevron-left fa-2x"></i>
        <i class="fa fa-chevron-right fa-2x"></i>

    </a>
    <div id="menu">
        <div class="pure-menu pure-menu-open">
          <a id="logo" class="logo pure-menu-heading" href="#"><i class="fa fa-comments-o fa-2x"></i>&nbsp;Pair List</a>
            <ul id="activeUsersList">
              <!-- <li class="menu-item-divided pure-menu-selected"> -->
            </ul>
        </div>
        <span id= "logo-in-map"></span>
        <div id="container">
        </div>
    </div>
</div>

    <div data-role="popup" id="popupBasic">
      <!-- this is the hangout chat popup that will show when a user is clicked -->
        <div id="placeholder-div1"></div>
    </div>
</div>

<div id="map">
</div>
<div id="footer">
</div>

<div id="pop-up" style="display:none;">
  <a id="close-pop-up" href="#" rel="modal:close"><i class="fa fa-times-circle-o fa-lg"></i></a>
  <div class="button-div"></div>
  Kicks off a Google Hangout in a new tab
</div>
