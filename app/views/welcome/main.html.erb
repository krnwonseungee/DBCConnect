<%= javascript_include_tag "application"%>

<script id="quote-template" type="text/x-handlebars-template">
  <div>
    <h3>"{{content}}"</h3>
    <h4>{{author}}</h4>
  </div>
</script>

<script id="pairlist-user-template" type="text/x-handlebars-template">
  <li id="{{id}}">
    <a href="#pop-up" rel="modal:open">
      {{#if active}}
        <i class="fa fa-circle active">
          {{else}}
        <i class="fa fa-circle">
      {{/if}}
      </i>
      {{name}}
    </a>
  </li>
</script>

<script id="google-hangout-prompt" type="text/x-handlebars-template">
  <a
    id="pairing-link"
    class="pure-button pure-button-active"
    href="http://plus.google.com/hangouts/_?gid=235141833113&gd={{lookupData}}"
    target=_blank
    >Request Pairing</a>
</script>

<script id="user-popup" type="text/x-handlebars-template">
  <div class="user-popup">
    <a class="profile-link user-link" id="{{id}}">{{name}}</a>
    <ul class="social-media">
      <li class="social-link"><a href="{{github}}"    target="_blank"><i i class="fa fa-github fa-lg"></i></a></li>
      <li class="social-link"><a href="{{twitter}}"   target="_blank"><i i class="fa fa-twitter fa-lg"></i></a></li>
      <li class="social-link"><a href="{{facebook}}"  target="_blank"><i i class="fa fa-facebook fa-lg"></i></a></li>
      <li class="social-link"><a href="{{linked_in}}" target="_blank"><i i class="fa fa-linkedin fa-lg"></i></a></li>
      <li class="social-link"><a href="{{blog}}"      target="_blank"><i i class="fa fa-tumblr fa-lg"></i></a></li>
    </ul>
  </div>
</script>

<script id="google-hangout-response-button-template" type="text/x-handlebars-template">
  <a id="pairing-link" class="pure-button pure-button-active" href="{{url}}" target=_blank> Join Pairing</a>
</script>

<div class="header">
  <div class="home-menu pure-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
      <a class="pure-menu-heading" href=""><span></span></a>
      <ul id="top_navbar">
          <li id="availability"><a href="#"><span><i class="fa fa-user"></i><i class="fa fa-user"></i></span></a></li>
          <li><%= render 'searchbar' %></li>
          <li class="pure-menu-selected"><a class='profile-link logged_user' href="#"></a></li>
          <li id="logout"></li>
      </ul>
  </div>
</div>

<div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <i class="fa fa-chevron-left fa-2x"></i>
        <i class="fa fa-chevron-right fa-2x"></i>

    </a>
    <div id="menu">
        <div class="pure-menu pure-menu-open">
          <a id="logo" class="logo pure-menu-heading" href="#"><i class="fa fa-comments-o fa-2x"></i>&nbsp;Pair List</a>
            <ul id="activeUsersList">
              <!-- <li class="menu-item-divided pure-menu-selected"> -->
            </ul>
        </div>
        <span id= "logo-in-map"></span>
        <div id="container">
        </div>
    </div>
</div>

    <div data-role="popup" id="popupBasic">
      <!-- this is the hangout chat popup that will show when a user is clicked -->
        <div id="placeholder-div1"></div>
    </div>
</div>

<div id="map">
</div>
<div id="footer">
</div>

<div id="pop-up" style="display:none;">
  <a id="close-pop-up" href="#" rel="modal:close"><i class="fa fa-times-circle-o fa-lg"></i></a>
  <div class="button-div"></div>
  Kicks off a Google Hangout in a new tab
</div>
